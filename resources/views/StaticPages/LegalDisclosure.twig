{% extends getPartial('page-design') %}

{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% block PartialHead %}
    <meta name="description" content="{{ trans('Ceres::Template.legalDisclosureMetaDescription') }}">
    <meta name="robots" content="{{ config("Ceres.meta.robots_legal_disclosure") }}">
    <title>{{ trans("Ceres::Template.legalDisclosure") }} | {{ trans("Ceres::Template.headerCompanyName") }}</title>

    {%
        set pageMetadata = pageMetadata
            .withRobots(ceresConfig.meta.robotsLegalDisclosure)
            .withTitle("Ceres::Template.legalDisclosure")
            .withDescription("Ceres::Template.legalDisclosureMetaDescription")
    %}
{% endblock %}

{% block PageBody %}

    {% set legalDisclosure = services.legalInformation.getLegalDisclosure() %}

    <div class="container-max page-content">
        <div class="row">
            <div class="col-12">
                {% autoescape false %}
                    <h1>{{ trans("Ceres::Template.legalDisclosure") }}</h1>
                {% endautoescape %}

                <hr class="my-5">

                {% if legalDisclosure.htmlText %}
                    {{ legalDisclosure.htmlText | raw }}
                {% else %}
                    <p class="static-page-plain-text">{{ legalDisclosure.plainText }}</p>
                {% endif %}

                {{ LayoutContainer.show("Ceres::StaticPages.LegalDisclosure") }}
            </div>
        </div>
    </div>

{% endblock %}
