{% extends getPartial('page-design') %}

{% block PartialHead %}
    {%
        set pageMetadata = pageMetadata
            .withRobots(ceresConfig.meta.robotsContact)
            .withTitle("Ceres::Template.contact")
            .withDescription("Ceres::Template.contactMetaDescription")
    %}


    {% if config("Ceres.global.google_recaptcha_api_key") | length > 0 %}
        <script src='https://www.google.com/recaptcha/api.js' async defer></script>
    {% endif %}

{% endblock %}

{% block PageBody %}

    {{ component( "Ceres::Customer.Components.Contact.ContactForm" ) }}

    <div class="page-content container-max contact">
        <contact-form template="#vue-contact-form"></contact-form>
    </div>

{% endblock %}
